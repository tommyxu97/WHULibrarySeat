<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_item_seat_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_menu_seat_in_use"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_item_seat_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:textSize="15sp"
            android:text="150"/>

        <ImageView
            android:id="@+id/iv_item_seat_window"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_menu_sun"/>

        <ImageView
            android:id="@+id/iv_item_seat_charge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_menu_charge"/>

    </LinearLayout>

</LinearLayout>