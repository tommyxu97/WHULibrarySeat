<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="3dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_item_stared_seat_logo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_menu_seat_in_use"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_item_stared_seat_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="150"/>

        <ImageView
            android:id="@+id/iv_item_stared_seat_window"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_menu_sun"/>

        <ImageView
            android:id="@+id/iv_item_stared_seat_charge"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_menu_charge"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_stared_seat_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />

</LinearLayout>